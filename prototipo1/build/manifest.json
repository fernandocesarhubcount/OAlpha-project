{
  "name": "Omie",
  "manifest_version": 2,
  "description": "Beta extension for Omie",
  "version": "0.1",
  "permissions": [
    "unlimited_storage",
    "contextMenus",
    "cookies",
    "storage",
    "idle",
    "tabs",
    "activeTab"
  ],
  "icons": {
    "16":"images/build-ico.png",
    "32":"images/build-ico.png",
    "64":"images/build-ico.png",
    "128":"images/build-ico.png"
  },
  "browser_action":{
    "default_popup": "popup.html"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":[
         "js/index.js"
      ],
      "run_at": "document_end",
      "persistent": false
    }
  ]


}
